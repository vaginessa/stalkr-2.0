# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.Application.index()
POST    /                           controllers.Application.submit()
GET     /about                      controllers.Application.about()
GET     /error                      controllers.Application.notFoundError()
GET     /result/:name/next/:offset         controllers.Application.getMore(name: String, offset: Int)
GET     /result/:name/previous/:offset     controllers.Application.getLess(name: String, offset: Int)
GET     /result/:name                      controllers.Application.searchResult(name: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

